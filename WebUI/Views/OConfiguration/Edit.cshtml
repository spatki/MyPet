@using ProcessAccelerator.WebUI.Dto
@using System.Web.Script.Serialization
@using ProcessAccelerator.WebUI.Controllers
@model tbl_org_level_organisationInput
@{
    Layout = null;
    string updateId = "";

    if (Model.mstr_Org_Level_ParentID == null) 
    {
        updateId = "OLevelStructure";
    }
    else {
        updateId = "C" + Model.mstr_Org_Level_ParentID.ToString();
    }
}
<div class="modal-dialog">
	<div class="modal-content">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		<h4 class="modal-title" id="dialogTitle">Edit Node</h4>
	</div>
    <form method="post" action="@Url.Action("Edit")" id="submitLevel">
        <div class="modal-body"> 
            @Html.ValidationSummary(true)
		    <div class="row">
			    <div class="col-md-12">
                    <div class="form-group col-md-12">    
                        <label class="form-label col-md-12">Organisation Level</label>
                        <div class="form-control col-md-12">@Model.levelName</div>
                    </div>
                    <div class="form-group col-md-12">    
                        <label class="form-label col-md-12">Level Data</label>
                        <div class="form-control col-md-12">@Model.masterDataName</div>
                    </div>
                    <input type="hidden" name="ID" id="ID" value="@Model.ID" />
                    <input type="hidden" name="mstr_Org_LevelID" id="mstr_Org_LevelID" value="@Model.mstr_Org_LevelID" />
                    <input type="hidden" name="levelName" id="levelName" value="@Model.levelName" />
                    <input type="hidden" name="masterDataName" id="masterDataName" value="@Model.masterDataName" />
                    <input type="hidden" name="mstr_Org_Level_MasterID" id="mstr_Org_Level_MasterID" value="@Model.mstr_Org_Level_MasterID" />
                    <input type="hidden" name="Level" id="Level" value="@Model.Level" />
                   <input type="hidden" name="mstr_Org_Level_ParentID" id="mstr_Org_Level_ParentID" value="@Model.mstr_Org_Level_ParentID" />
                    <input type="hidden" name="StructPath" id="StructPath" value="@Model.StructPath" />
                    <div class="form-group col-md-12">
                        <label>Comments</label>
                        @Html.TextAreaFor(o => o.Comments,new { @class = "form-control col-md-12" })
                        @Html.ValidationMessageFor(o => o.Comments)
                    </div>
			    </div>	
		    </div>
	    </div>
	    <div class="modal-footer">
			<div class="form-group">
		        <button type="button" class="btn gray-bg" data-dismiss="modal">Cancel</button>
		        <button type="button" class="btn blue-bg saveStructure" data-mode="edit" data-id="L@(Model.ID)" data-form="submitLevel" data-dialog="openDialogBox">Save</button>
		        <button type="button" class="btn blue-bg deleteDialog" data-id="L@(Model.ID)" data-dialogname="DeleteDialog" data-source="@Url.Action("Delete", new { id = @Model.ID })">Delete</button>
			</div>
	    </div>
    </form>
	</div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->

<!-- Modal -->
<div class="modal fade" id="DeleteDialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
</div><!-- /.modal -->

