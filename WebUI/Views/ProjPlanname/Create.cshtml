@using ProcessAccelerator.WebUI.Dto
@using System.Web.Script.Serialization
@model tbl_org_proj_plannameInput
@{
    Layout = null;
}
<div class="modal-dialog">
	<div class="modal-content">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		<h4>Create New Plan</h4>
	</div>
    <form method="post" action="@Url.Action("Create")" id="submitLevel">
        <div class="modal-body"> 
            @Html.ValidationSummary(true)
		    <div class="row">
                <input type="hidden" value="@Model.ClientID" name="ClientID" id="ClientID" />
                <input type="hidden" value="@Model.tbl_Org_ProjectID" name="tbl_Org_ProjectID" id="tbl_Org_ProjectID" />
			    <div class="col-md-12">
                        <div class="form-group">    
                            <label>Name</label>
                            @Html.TextBoxFor(o => o.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(o => o.Name)
                        </div>
                        <div class="form-group">
                            <label class="control-label">Description</label>
                            @Html.TextAreaFor(o => o.Description, new { @class = "form-control" })
                            @Html.ValidationMessageFor(o => o.Description)
                        </div>
			    </div>	
		    </div>
	    </div>
	    <div class="modal-footer">
			<div class="form-group">
		        <a href="javascript:;" class="btn gray-bg closeDialog">Cancel</a>
		        <button type="button" class="btn blue-bg save" data-mode="add" data-id="@ViewBag.caller" data-form="submitLevel">Save</button>
			</div>
	    </div>
    </form>
	</div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->


