@model tbl_org_estm_parametersInput
@{
    Layout = null;
}
<div class="modal-dialog">
	<div class="modal-content">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		<h4>Edit Parameter</h4>
	</div>
    <form method="post" action="@Url.Action("Edit")" id="editParamForm">
        <div class="modal-body"> 
            @Html.ValidationSummary(true)
		    <div class="row">
                <input type="hidden" value="@Model.ID" name="ID" id="ID" />
                <input type="hidden" value="@Model.ClientID" name="ClientID" id="ClientID" />
			    <div class="col-md-12">
                    <div class="form-group">    
                        <label>Name</label>
                        @Html.TextBoxFor(o => o.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(o => o.Name)
                    </div>
                </div>
			    <div class="col-md-12">
                    <hr />
                    <h4><strong>Weightage</strong></h4>
                </div>
			    <div class="col-md-12">
                    <div class="form-group">
                        <div class="col-md-4">
                            <label>Simple</label>
                            @Html.TextBoxFor(o => o.Simple, new { @class = "form-control" })
                            @Html.ValidationMessageFor(o => o.Simple)
                        </div>
                        <div class="col-md-4">
                            <label>Medium</label>
                            @Html.TextBoxFor(o => o.Medium, new { @class = "form-control" })
                            @Html.ValidationMessageFor(o => o.Medium)
                        </div>
                        <div class="col-md-4">
                            <label>Complex</label>
                            @Html.TextBoxFor(o => o.Complex, new { @class = "form-control" })
                            @Html.ValidationMessageFor(o => o.Complex)
                        </div>
                    </div>
			    </div>	
		    </div>
	    </div>
	    <div class="modal-footer">
			<div class="form-group">
		        <a href="javascript:;" class="btn gray-bg closeDialog">Cancel</a>
		        <button type="button" class="btn blue-bg save" data-mode="editDropDown" data-id="ParamOption@(Model.ID)" data-form="editParamForm">Update</button>
		        <button type="button" class="btn blue-bg save" data-mode="delete" data-id="ParamOption@(Model.ID)" data-form="submitDelete">Delete</button>
			</div>
	    </div>
    </form>
    <form name="submitDelete" id="submitDelete" method="post" action="@Url.Action("Delete", "ProjEstmParams", new { id = Model.ID })">
        <input type="hidden" value="@Model.ID" name="ID" />
    </form>
	</div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->


