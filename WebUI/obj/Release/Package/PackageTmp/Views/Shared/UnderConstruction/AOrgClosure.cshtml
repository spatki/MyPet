		    $(this).parent().after(newColumns);
		    $(this).parent().parent().parent().data("count", count);

		    // Add the option to add more rows
		    $(this).parent().parent().parent().append('<tr id="R' + count + '" class="EditRow"><td><a href="#" class="addObs nav" data-id="R' + (count + 1) + '" ><i class="icon-">&#xf055</i></a></td></tr>');
