@model IEnumerable<tbl_docmgr_document>
@{
    Layout = null;
}
@foreach (var o in Model)
{  <tr id="@o.ID">
        <td><a href="javascript:" class="openDocument" data-source="@Url.Action("ViewDocument",new { id = o.ID })">@o.Name</a></td>
        <td>@o.Classification</td>
        <td>@o.Version
            @if (o.Version > 1) 
            {
                <button class="btn btn-xs orange-bg openDialog" title="View Versions" data-id="@o.ID" data-mode="edit" data-source="@Url.Action("ViewVersions", new { id = o.ID })"><i class="icon-copy"></i></button>
            }
        </td>
        <td>
            <button class="btn btn-med blue-bg openDialog" title="Upload Version" data-id="@o.ID" data-mode="edit" data-source="@Url.Action("CreateVersion", new { id = o.ID })"><i class="icon-edit"></i></button>
            <button class="btn btn-med red-bg openDeleteDialog" title="Delete Document" data-id="@o.ID" data-mode="delete" data-source="@Url.Action("Delete", new { id = o.ID })"><i class="icon-">&#xf057;</i></button>
        </td>
    </tr>
}