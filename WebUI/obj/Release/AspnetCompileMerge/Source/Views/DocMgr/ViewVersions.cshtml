@using ProcessAccelerator.WebUI
@model tbl_docmgr_document
@{
    Layout = null;
}

<div class="modal-dialog">
	<div class="modal-content">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		<h4 class="modal-title" id="dialogTitle">Version History for @Model.Name</h4>
	</div>
        <div class="modal-body"> 

		    <div class="row">
			    <div class="col-md-12">
                        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="processTable">
                            <thead>
                                <tr>
                                <th>Version</th>
                                <th>Created On</th>
                                <th>Comments</th>
                                <th class="docTableResult">Action</th>
                                </tr>
                            </thead>
                            <tbody id="listing">
                                @if (Model.tbl_docmgr_version.Any())
                                {
                                    foreach (var v in Model.tbl_docmgr_version)
                                    {
                                        <tr>
                                            <td>@v.version</td>
                                            <td>@(v.CreateDate == null ? "" : v.CreateDate.GetValueOrDefault().ToString(Globals.DateFormatString))</td>
                                            <td>@v.Comments</td>
                                            <td><button class="btn btn-xs orange-bg openDocument" title="View" data-id="" data-source="@Url.Action("ViewDocument",new { id = Model.ID, version = v.ID })"><i class="icon-eye-open"></i></button></td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
			    </div>	
		    </div>
	    </div>
	    <div class="modal-footer">
			<div class="form-group">
		        <button type="button" class="btn gray-bg" data-dismiss="modal">Close</button>
			</div>
	    </div>
    </form>
	</div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
