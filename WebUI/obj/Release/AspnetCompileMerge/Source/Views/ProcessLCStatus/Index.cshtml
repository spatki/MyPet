@using ProcessAccelerator.WebUI.Dto
@using Omu.AwesomeMvc
@model mstr_process_lc_statusInput
@{
    Layout = null;
}
            @Html.Action("BreadCrump", "Menu", new { id = ViewBag.FunctionID })
            <div class="row">
                <div class="col-md-8">
                    <label class="control-label col-md-2">Status Type :</label>
                    <div class="col-md-10">@Html.DropDownListFor(o => o.Type, (new StatusType()).getList(0), "Select ...", new { @class = "col-md-12 form-control reLoadOnChange" })
                        @Html.ValidationMessageFor(o => o.Type)
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="pull-right"><a href="javascript:;" data-toggle="modal" class="btn btn-med blue-bg relativeAddNew" data-sourceid="Type" data-id="listing" data-source="@Url.Action("Create")">Add New</a></div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="panel colored col-md-12">
                    <div class="panel-heading green-bg">
                        <h3 class="panel-title" id="masterTitle">Process Status</h3>
                        <ul class="pull-right toolbar">
                            <li><a href="#" class="icon-button"><i class="icon-">&#xf059;</i></a></li>
                            <li><a href="javascript:;" class="icon-button reload-box reLoad" data-container="dataList" data-filter="Type" data-url="@Url.Action("ReloadItems")"><i class="icon-">&#xf021;</i></a></li>
                            <li><a href="#" class="icon-button mini-max"><i class="icon-">&#xf0aa;</i></a></li>
                        </ul>
                    </div>
                    <div class="panel-body" id="dataList">
                        <p> Select a Status Type to display its master data</p>
                    </div>
                </div>                
            </div>


<script>
    jsTable('processTable');
    specialDropDown(".specialCombo");

</script>


