@{
    Layout = null;
    var id = (string) ViewBag.ID;
    var repoID = ViewBag.repoID;
    var sequence = ViewBag.sequence;
    var clientID = ViewBag.clientID;
}
<div class="panel-group" id="inputPanel@(repoID)A@(id)">
    <div class="panel colored">
        <div class="panel-heading  yellow-bg">
            <h4 class="panel-title">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#pAccord@(repoID)" href="#PShow@(repoID)A@(id)">
                <span id="pNm@(repoID)A@(id)Title">@(sequence). Provide Activity Name</span>
            </a>
            </h4>
            <ul class="pull-right toolbar">
                <li><a href="javascript:;" class="icon-button confirmAction" data-messagetitle="Confirm Delete" data-message="Do you want to delete this activity ?" data-class="removeActivity" data-classparams='data-id="@id" data-repoid="@repoID" data-updateid="inputPanel@(repoID)A@(id)" data-mode="client"'><i class="icon-">&#xf057;</i></a></li>
            </ul>
        </div>
        <div id="PShow@(repoID)A@(id)" class="panel-collapse collapse in">
            <div class="panel-body">
                <div class="row">
                    <div class="form-group col-lg-6">
                        <div class="col-md-12 form-group">
                            <div class="col-md-2"><input type="text" name="selectedOptions[@(id)].SequenceNo" value="@sequence" class="form-control" id="pNm@(repoID)A@(id)Seq">
                                @Html.ValidationMessage("selectedOptions[" + id + "].SequenceNo")
                            </div>
                            <div class="col-md-2">
                                <label class="col-md-2">Name</label>
                            </div>
                            <div class="col-lg-8">
                                <input type="hidden" name="selectedOptions.Index" value="@id">
                                <input type="hidden" name="selectedOptions[@(id)].ID" value="@id">
                                <input type="hidden" name="selectedOptions[@(id)].tbl_Process_RepositoryID" value="@repoID">
                                <input type="text" name="selectedOptions[@(id)].Name" class="form-control procName" value="" id="pNm@(repoID)A@(id)">
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-lg-6">
                        <div class="col-md-12 form-group">
                            <label class="col-lg-5">Status</label>
                            <div class="col-lg-6">@Html.Action("getStatusFor","ProcessLCStatus",new { selectedItem = 0, controlName = "selectedOptions[" + @id + "].mstr_Process_LC_StatusID", excludeIds = "", includeIds = "", reload = "", Type = 1, DefaultSelection = false })</div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label>Description</label>
                            <textarea id="pDsc@(repoID)A@(id)" name="selectedOptions[@(id)].Description" class="form-control popovers" rows="5" data-original-title="Description" data-content="Provide a detailed description of this activity" data-trigger="hover" data-placement="right"></textarea>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="col-lg-12">
                            <label class="col-lg-5">Default Status</label>
                            <div class="col-md-6">
                                @Html.Action("getStatusFor","ProcessLCStatus",new { selectedItem = 0, controlName = "selectedOptions[" + id + "].DefaultStatus", excludeIds = "", includeIds = "", reload = "", Type = 2, DefaultSelection = false })
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <label class="col-lg-5">Completion Status</label>
                            <div class="col-lg-6">
                                @Html.Action("getStatusFor","ProcessLCStatus",new { selectedItem = 0, controlName = "selectedOptions[" + id + "].CompletionStatus", excludeIds = "", includeIds = "", reload = "", Type = 2, DefaultSelection = false })
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <label class="col-lg-5">Default Hrs</label>
                            <div class="col-lg-6">
                                <input type="text" name="selectedOptions[@(id)].DefaultHRS" value="" />
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <label class="col-lg-5">Default Duration (Days)</label>
                            <div class="col-lg-6">
                                <input type="text" name="selectedOptions[@(id)].DefaultDurationDays" value="" />
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <label class="col-lg-5">Activity Type</label>
                            <div class="col-lg-6">
                                @Html.DropDownList("selectedOptions[" + id + "].Type", (new ActivityType()).getList(0), "Select ...", new { @class = "col-md-12" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                    </div>
                    <div class="col-md-6">
                        <div class="form-group col-md-12">
                            <div class="col-md-12">@Html.CheckBox("selectedOptions[" + id + "].reSequence", false, new { @class = "reSequenceOption" })&nbsp; <label class="control-label">Re-order sequence starting from here</label></div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

