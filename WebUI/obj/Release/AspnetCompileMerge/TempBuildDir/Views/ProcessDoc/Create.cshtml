@using ProcessAccelerator.WebUI
@using ProcessAccelerator.WebUI.Dto
@using System.Web.Script.Serialization
@model tbl_process_documentInput
@{
    Layout = null;
}
<script type="text/javascript">
    $(document).ready(function () {
        $("#uploadForm").ajaxForm({
            success: function (data) {
                $.pnotify({
                    title: 'New Record Created',
                    type: 'info'
                });
                $('#processTable').dataTable().fnDestroy();
                $("#listing").append(data);
                $("#openDialogBox").modal("hide");
                jsTable("processTable");
            },
            error: function (data) {
                $("#openDialogBox").html(data.responseText);
            }
        });
    });
</script>    

<div class="modal-dialog">
	<div class="modal-content">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		<h4 class="modal-title" id="dialogTitle">Upload Document</h4>
	</div>
    <form method="post" action="@Url.Action("Create")" id="uploadForm" enctype="multipart/form-data">
        <div class="modal-body"> 
            @Html.ValidationSummary(true)
		    <div class="row">
			    <div class="col-md-12">
                        <div class="form-group">    
                            <label for="file">Document Title</label>
                            @Html.TextBoxFor(o => o.tbl_docmgr_document.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(o => o.tbl_docmgr_document.Name)
                        </div>
                        <div class="form-group">    
                            <label for="file">Select File</label>
                            <input type="file" name="tbl_docmgr_document.fileName" id="fileName" />
                            @Html.ValidationMessageFor(o => o.tbl_docmgr_document.fileName)
                        </div>
                        <div class="form-group">
                            <label>Classification</label>
                            @Html.TextBoxFor(o => o.tbl_docmgr_document.Classification, new { @class = "form-control" })
                            @Html.ValidationMessageFor(o => o.tbl_docmgr_document.Classification)
                        </div>
                        @Html.HiddenFor(o => o.tbl_docmgr_document.UploadedBy,WebSecurity.CurrentUserId)
                        @Html.HiddenFor(o => o.tbl_docmgr_document.UploadDate, Globals.DateFormatValue)
			    </div>	
		    </div>
	    </div>
	    <div class="modal-footer">
			<div class="form-group">
		        <button type="button" class="btn gray-bg" data-dismiss="modal">Cancel</button>
		        <button type="submit" class="btn blue-bg " data-mode="add" data-id="listing" data-form="submitLevel">Save</button>
			</div>
	    </div>
    </form>
	</div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->

