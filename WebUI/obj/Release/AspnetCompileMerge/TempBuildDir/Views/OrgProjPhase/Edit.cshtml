@model mstr_org_proj_phaseInput
@{
    Layout = null;
}
<div class="modal-dialog">
	<div class="modal-content">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		<h4 class="modal-title" id="dialogTitle">Edit Project Phase</h4>
	</div>
        <form method="post" action="@Url.Action("Edit")" id="submitLevel">
            <div class="modal-body"> 
                @Html.ValidationSummary(true)
		        <div class="row">
			        <div class="col-md-12">
                                <div class="form-group">
                                    <input type="hidden" value="@Model.ID" />
                                    <label>Sequence No</label>
                                    @Html.TextBoxFor((o => o.SequenceNo), new { @class = "form-control"})
                                    @Html.ValidationMessageFor(o => o.SequenceNo)
                                </div>                        
                                <div class="form-group">    
                                    <label>Short Name</label>
                                    @Html.TextBoxFor(o => o.ShortName, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(o => o.ShortName)
                                </div>
                                <div class="form-group">
                                    <label>Long Name</label>
                                    @Html.TextBoxFor(o => o.LongName, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(o => o.LongName)
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Description</label>
                                    @Html.TextAreaFor(o => o.Description, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(o => o.Description)
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Percentage Distribution</label>
                                    @Html.TextBoxFor(o => o.PercentTime, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(o => o.PercentTime)
                                </div>
			        </div>	
		        </div>
            </div>
	        <div class="modal-footer">
			    <div class="form-group">
			    <div class="row">
                    <div class="col-lg-12">
		                <button type="button" class="btn gray-bg" data-dismiss="modal">Cancel</button>
		                <button type="button" class="btn blue-bg saveDefault" data-mode="edit" data-id="@Model.ID" data-form="submitLevel" >Save</button>
                    </div>
                </div>
			    </div>
	        </div>
        </form>
	</div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->

