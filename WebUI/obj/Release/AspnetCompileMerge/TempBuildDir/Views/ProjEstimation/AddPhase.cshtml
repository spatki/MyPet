@model proj_estm_size_parameter
@{
    Layout = null;
}
<div class="modal-dialog">
	<div class="modal-content">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		<h4 class="modal-title" id="dialogTitle">Select Phase</h4>
	</div>
    <form method="post" action="@Url.Action("AddPhase")" id="addPhaseForm">
        <div class="modal-body"> 
            @Html.ValidationSummary(true)
		    <div class="row">
			    <div class="col-md-12">
                        <div class="form-group">    
                            <input type="hidden" id="ID" name="ID" value="@Model.ID" />
                            <input type="hidden" id="Proj_EstimationID" name="Proj_EstimationID" value="@Model.Proj_EstimationID" />
                            <input type="hidden" id="ProjectID" name="ProjectID" value="@Model.ProjectID" />
                            <input type="hidden" id="ClientID" name="ClientID" value="@Model.ClientID" />
                            <input type="hidden" id="GroupID" name="GroupID" value="@Model.GroupID" />
                            <input type="hidden" id="ExcludeIDs" name="ExcludeIDs" value="@Model.ExcludeIDs" />
                            <label>Phase</label>
                            @Html.Action("getListItemsFor", "OrgPhaseInProj", new { selectedItem = Model.ParameterID.GetValueOrDefault(), controlName = "ParameterID", excludeIds = Model.ExcludeIDs, selectIds = "", projectTypeID = Model.GroupID, reload = "" })
                        </div>
                </div>
            </div>
            <hr />
		    <div class="row">
			    <div class="col-md-12">
                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.CheckBox("IsCutPhase", Model.IsCutPhase)
                                <label>Treat this as the CUT Phase</label>
                            </div>    
                        </div>
                </div>
            </div>
	    </div>
	    <div class="modal-footer">
			<div class="form-group">
		        <button type="button" class="btn gray-bg" data-dismiss="modal">Cancel</button>
		        <button type="button" class="btn blue-bg save" data-mode="addEffSchDefect" data-id="PhaseParams" data-form="addPhaseForm">Select</button>
			</div>
	    </div>
    </form>
	</div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->

