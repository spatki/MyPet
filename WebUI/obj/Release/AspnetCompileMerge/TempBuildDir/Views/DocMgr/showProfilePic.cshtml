@model ProcessAccelerator.WebUI.Dto.tbl_docmgr_documentInput
@{
    Layout = null;
}

@using (Html.BeginForm("uploadProfilePicture", "DocMgr", FormMethod.Post, new { id = "changeProfilePic" }))
{
    @Html.AntiForgeryToken()

    <div class="panel colored">
        <div class="panel-heading blue-bg">
            <h3 class="panel-title">Profile Picture</h3>
        </div>
        <div class="panel-body">
			<div class="col-md-12">
                <div class="panel-body">
                    <img id="displayProfilePic" src="@(Model.FileLocation == null ? Url.Content("~/Content/images/no_user_thumbnail.png") : Url.Content(Model.FileLocation))"  title='User Pic' width='200' height='200' alt='User Pic'/>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <button type="button" class="btn btn-med blue-bg openDialog" data-source="@Url.Action("uploadProfilePicture","DocMgr")">Upload Picture</button>
        </div>
    </div>
}

