@model planSupportingDocuments
@{
    Layout = null;
}

<div class="modal-dialog">
	<div class="modal-content">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		<h4>Select Supporting Documents</h4>
	</div>
    <form method="post" action="@Url.Action("addSupportingDocument")" id="submitLevel">
        <div class="modal-body"> 
            @Html.ValidationSummary(true)
            @Html.HiddenFor(o => o.PlanID)
		    <div class="row">
                <table  class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Type</th>
                            <th>Document</th>
                            <th>Remarks</th>
                            <th>Mandatory</th>
                            <th class="hidden-sm">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @Html.Action("getSupportingDocuments", "PrjProcessTailor", new { processMapID = Model.MapID, planID = Model.PlanID, excludeIDs = Model.excludeIDs, key = Model.key })
                    </tbody>
                </table>
		    </div>
	    </div>
	    <div class="modal-footer">
			<div class="form-group">
		        <button type="button" class="btn gray-bg closeDialog">Cancel</button>
		        <button type="button" class="btn blue-bg saveDefaultExtra" data-mode="editExtra" data-id="addNewDoc" data-dialog="extraDialogBox" data-form="submitLevel">Select</button>
			</div>
	    </div>
    </form>
	</div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
