@model ProcessAccelerator.WebUI.Dto.LoginModel
@{
    Layout = null;
}

@if (@User.Identity.IsAuthenticated)
{
    @Html.Action("BreadCrump", "Menu", new { id = ViewBag.FunctionID })
	<div class="row">
            <div class="panel col-md-12">
            <div class="panel-heading">
                <h3 class="panel-title">Organisation Configuration</h3>
                <ul class="pull-right toolbar">
                    <li><a href="#" class="icon-button"><i class="icon-">&#xf059;</i></a></li>
                    <li><a href="#" class="icon-button reload-box"><i class="icon-">&#xf021;</i></a></li>
                    <li><a href="#" class="icon-button mini-max"><i class="icon-">&#xf0aa;</i></a></li>
                    <li><a href="#" class="icon-button close-box"><i class="icon-">&#xf057;</i></a></li>
                </ul>
            </div>
            <div class="panel-body">
                <p>Here you can configure the general processes which apply to an organisation. These processes are a superset which can be further customised and fine tuned at an organisation level.
                    You should have the appropriate authority and rights to configure the processes in this tool. This will be a one time effort. Begin your configuration by choosing the options below.</p>
                <p>These options are also available on the left hand side menu on this page</p>
            </div>
        </div>
    </div>
        <div class="row responsive-tab">
            <ul class="stats clearfix">
                <li class="col-md-4 popovers" data-original-title="Levels" data-content="Levels indicate organisation classifications. Configure levels based how you want to structure your organisation." data-trigger="hover" data-placement="top">
                    <div class="blue-bg subMenu" data-source="@Url.Action("Index","OrgLevel")">
                    <i class="icon-">&#xf097;</i>
                    <h5>Levels</h5>
                    <a href="javascript:" class="subMenu" data-source="@Url.Action("Index","OrgLevel")">Proceed <i class="icon-">&#xf0a9;</i></a>
                    </div>
                </li>
                <li class="col-md-4 popovers" data-original-title="Roles" data-content="Here you define roles specific to an organisation. They may be mapped to the roles defined in process configuration." data-trigger="hover" data-placement="top">
                    <div class="mehroon-bg subMenu" data-source="@Url.Action("Index","OrgRole")">
                    <i class="icon-">&#xf0f0;</i>
                    <h5>Roles</h5>
                    <a href="javascript:" class="subMenu" data-source="@Url.Action("Index","OrgRole")">Proceed <i class="icon-">&#xf0a9;</i></a>
                    </div>
                </li>
                <li class="col-md-4 popovers" data-original-title="Structure" data-content="Define the organisation structure using this option." data-trigger="hover" data-placement="top">
                    <div class="green-bg subMenu" data-source="@Url.Action("Index","OrgStructure")">
                    <i class="icon-">&#xf0e8;</i>
                    <h5>Structure</h5>
                    <a href="javascript:" class="subMenu" data-source="@Url.Action("Index","OrgStructure")">Proceed <i class="icon-">&#xf0a9;</i></a>
                    </div>
                </li>
            </ul>
        </div>
        <div class="row responsive-tab">
            <ul class="stats clearfix">
                <li class="col-md-4 popovers" data-original-title="Projects" data-content="Define project types and its phases using this option. This will be used during project creation process." data-trigger="hover" data-placement="top">
                    <div class="black-bg subMenu" data-source="@Url.Action("ProjOptions","Main")">
                    <i class="icon-">&#xf018;</i>
                    <h5>Projects</h5> 
                    <a href="javascript:" class="subMenu" data-source="@Url.Action("ProjOptions","Main")">Proceed <i class="icon-">&#xf0a9;</i></a>
                    </div>
                </li>
                <li class="col-md-4 popovers" data-original-title="Functions" data-content="Configure functions and their sub-functions uing this options. All support groups that enable the primary business of the organisation should be defined here." data-trigger="hover" data-placement="top">
                    <div class="purple-bg subMenu" data-source="@Url.Action("FuncOptions","Main")">
                    <i class="icon-">&#xf0d1;</i>
                    <h5>Functions</h5>
                    <a href="javascript:" class="subMenu" data-source="@Url.Action("FuncOptions","Main")">Proceed <i class="icon-">&#xf0a9;</i></a>
                    </div>
                </li>
                <li class="col-md-4 popovers" data-original-title="Configuration" data-content="Configure organisation, map organisation levels, projects and functions with processes defined in process configuration. These will be picked up during implementation of these processes." data-trigger="hover" data-placement="top">
                    <div class="blue-bg subMenu" data-source="@Url.Action("Index","OConfiguration")">
                    <i class="icon-">&#xf0ad;</i>
                    <h5>Configuration</h5>
                    <a href="javascript:" class="subMenu" data-source="@Url.Action("Index","OConfiguration")">Proceed <i class="icon-">&#xf0a9;</i></a>
                    </div>
                </li>
            </ul>   
        </div>
        <div class="row responsive-tab">
            <ul class="stats clearfix">
                <li class="col-md-4 popovers" data-original-title="Masters" data-content="Define various masters required for process configuration." data-trigger="hover" data-placement="top">
                    <div class="yellow-bg subMenu" data-source="@Url.Action("OMasters","Main")">
                    <i class="icon-">&#xf00a;</i>
                    <h5>Masters</h5>
                    <a href="javascript:" class="subMenu" data-source="@Url.Action("OMasters","Main")">Proceed <i class="icon-">&#xf0a9;</i></a>
                    </div>
                </li>
            </ul>   
        </div>

    @functions{
        public string GetAntiForgeryToken()
        {
            string cookieToken, formToken;
            AntiForgery.GetTokens(null, out cookieToken, out formToken);
            return cookieToken + ":" + formToken;                
        }        
    }
}
