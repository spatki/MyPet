		var calculateValues = function () {
		    var pci_Count = 0;
		    var totalPC = 0;
		    var totalPC_Count = 0;
		    var phasePC = 0;
		    var pci = 0;

		    // Update individual scores
		    $("td[data-field='PCI']").each(function () {
		        $("#" + $(this).prop("id") + "_W").removeClass("Audit_NC");
		        switch ($(this).text()) {
		            case "FI":
		                $("#" + $(this).prop("id") + "_W").text("1.00");
		                $("#" + $(this).prop("id") + "_PC").children().first().text("100");
		                break;
		            case "LI":
		                $("#" + $(this).prop("id") + "_W").text("0.75");
		                if ($("#" + $(this).prop("id") + "_Inc").text() == "No") $("#" + $(this).prop("id") + "_PC").children().first().text("100");
                        else $("#" + $(this).prop("id") + "_PC").children().first().text("75");
		                break;
                    case "PI":
                        $("#" + $(this).prop("id") + "_W").text("0.50");
                        if ($("#" + $(this).prop("id") + "_Inc").text() == "No") $("#" + $(this).prop("id") + "_PC").children().first().text("100");
                        else $("#" + $(this).prop("id") + "_PC").children().first().text("50");
                        break;
                    case "NI":
                        $("#" + $(this).prop("id") + "_W").text("NC");
                        $("#" + $(this).prop("id") + "_W").addClass("Audit_NC");
                        if ($("#" + $(this).prop("id") + "_Inc").text() == "No") $("#" + $(this).prop("id") + "_PC").children().first().text("100");
                        else $("#" + $(this).prop("id") + "_PC").children().first().text("0");
                        break;
                    case "NY":
                    case "NA":
                        $("#" + $(this).prop("id") + "_W").text("");
                        $("#" + $(this).prop("id") + "_PC").children().first().text("100");
                        break;
                }
		    });

		    totalPC = 0;
		    totalPC_Count = 0;
		    $(".phaseScore").each(function () {
		        phasePC = 0;
		        pci_Count = 0
		        pci = 0
		        $("." + $(this).prop("id")).each(function () {
		            pci_Count = pci_Count + 1;
		            pci = pci + parseInt($(this).children().first().text());
		        });
		        phasePC = parseFloat(pci / pci_Count).toFixed(0);
		        totalPC = parseInt(totalPC) + parseInt(phasePC);
		        totalPC_Count = totalPC_Count + 1
		        $(this).text(phasePC + "%");
		    });

		    $("#projScore").text(parseFloat(totalPC / totalPC_Count).toFixed(0));
		};

